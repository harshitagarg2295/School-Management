<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin DashBoard</title>
    <link rel="stylesheet" href="adminDashboard.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">

</head>

<body>
    <div class="admin_dash">

        <!-- Include sidebar -->
        <%- include("partials/sidebar") %>

            <section class="main-section">

            <div class="cards">

                <div class="stud-card card purple">
                    <h3>123,421</h3>
                    <p>Students</p>
                </div>

                <div class="teach-card card">
                    <h3>123,421</h3>
                    <p>Teachers</p>
                </div>

                <div class="staff-card card purple">
                    <h3>123,421</h3>
                    <p>Staffs</p>
                </div>

                <div class="award-card card">
                    <h3>123,421</h3>
                    <p>Awards</p>
                </div>
            </div>


            <div class="charts">
                <div class="earnings-chart">

                    <div class="earnings-header">
                        <h2 class="chart-title">Earnings</h2>

                        <div class="legend-row">
                            <div class="legend-item">
                                <span class="legend-dot income-dot"></span>
                                <span>Income</span>
                            </div>
                            <div class="legend-item">
                                <span class="legend-dot expense-dot"></span>
                                <span>Expense</span>
                            </div>
                        </div>
                    </div>

                    <canvas id="earningsLineChart"></canvas>
                </div>

                <div class="pie-chart">

                    <div class="chart-1">
                        <canvas class="revenue-chart"></canvas>
                        <h3 class="revenue">Revenue</h3>
                    </div>

                    <div class="chart-2">
                        <canvas class="expense-chart"></canvas>
                        <h3 class="expense">Expenses</h3>
                    </div>
                </div>
            </div>

        </section>
    </div>


    <script src="adminDashboard.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

</body>

</html>
