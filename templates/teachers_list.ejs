<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Teachers</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.2/css/all.min.css">

</head>
<style>
    body {
        background-color: #f1f1f1;
    }

    .teachers-section {
        width: 82%;
    }

    .teachers-page {
        background-color: white;
        padding: 10px 18px;
        margin: 10px;
    }

    .headers {
        display: flex;
        justify-content: space-between;
    }

    .search-teach {
        display: flex;
        align-items: center;
    }

    .search-teach i {
        position: relative;
        left: 25px;
        font-size: 16px;
    }

    .search-teach input {
        padding: 7px 2px 7px 30px;
        border-radius: 16px;
        border: 1px solid grey;
        font-size: 15px;
    }

    .teachers-header {
        background-color: #b1e6f4;
        border-radius: 7px;

    }

    .teachers-header ul {
        display: grid;
        grid-template-columns: 0.2fr 1.5fr 1.5fr 1fr 1.5fr 1.5fr 1fr;
        list-style: none;
        font-size: 20px;
        color: rgb(70, 66, 66);
        padding: 10px 6px 13px 5px;
        gap: 10px;
    }

    .teachers-header ul li {
        margin-top: 22px;
    }

    .list {
        display: grid;
        grid-template-columns: 0.2fr 1.5fr 1.5fr 1fr 1.5fr 1.5fr 1fr;
        font-size: 18px;
        padding: 20px 10px;
        align-items: center;
        word-break: break-word;
    }

    .list:hover {
        background-color: rgb(231, 194, 219);
    }

    .checkbox {
        width: 14px;
        height: 14px;
        border: 1px solid grey;
        border-radius: 4px;
        cursor: pointer;
    }

    .icons {
        display: flex;
        gap: 10px;
        cursor: pointer;
    }
</style>

<body>
    <section class="teachers-section">

        <div class="teachers-page">

            <div class="headers">

                <h1>All Teachers List</h1>
                <div class="search-teach">
                    <i class="fa fa-search"></i>
                    <input type="text" placeholder="Search by Name">
                </div>
            </div>

            <div class="teachers-header">
                <ul>
                    <div class="header-checkbox"></div>
                    <li>Teacher Name</li>
                    <li>Subject</li>
                    <li>Class(es)</li>
                    <li>Address</li>
                    <li>Phone Number</li>
                    <li>Action</li>
                </ul>
                <hr>
            </div>
            
            <!-- Add this somewhere above the teacher list -->
<button onclick="document.querySelector('.teacher-form').style.display='block'">
  Add Teacher
</button>

<!-- Hidden Form -->
<form class="teacher-form" action="/add-teacher" method="POST" style="display:none; margin-top: 20px;">
  <input type="text" name="name" placeholder="Name" required>
  <input type="text" name="subject" placeholder="Subject" required>
  <input type="text" name="classes" placeholder="Classes (comma-separated)" required>
  <input type="text" name="address" placeholder="Address" required>
  <input type="text" name="phone" placeholder="Phone Number" required>
  <button type="submit">Save</button>
</form>

            <div class="teacher-list">

                <!-- <div class="list">
                    <div class="checkbox"></div>
                    <div class="name">Harshita Garg</div>
                    <div class="subject">Science</div>
                    <div class="class">7,8</div>
                    <div class="address">Madhopura goli no. 6</div>
                    <div class="number">9826230803</div>
                    <div class="icons">
                        <i class="fa-solid fa-pen-to-square"></i>
                        <i class="fa-solid fa-trash"></i>
                        <i class="fa-solid fa-ellipsis"></i>
                    </div>
                </div>
                <hr>

                <div class="list">
                    <div class="checkbox"></div>
                    <div class="name">Harshita Garg</div>
                    <div class="subject">Home Science</div>
                    <div class="class">7,8</div>
                    <div class="address">Madhopura goli no. 6</div>
                    <div class="number">9826230803</div>
                    <div class="icons">
                        <i class="fa-solid fa-pen-to-square"></i>
                        <i class="fa-solid fa-trash"></i>
                        <i class="fa-solid fa-ellipsis"></i>
                    </div>
                </div>
                <hr> -->
                <% teachers.forEach((teacher)=> { %>
                    <div class="list">
                        <div class="checkbox"></div>
                        <div class="name">
                            <%= teacher.name %>
                        </div>
                        <div class="subject">
                            <%= teacher.subject %>
                        </div>
                        <div class="class">
                            <%= teacher.class %>
                        </div>
                        <div class="address">
                            <%= teacher.address %>
                        </div>
                        <div class="number">
                            <%= teacher.phone %>
                        </div>
                        <div class="icons">
                            <i class="fa-solid fa-pen-to-square"></i>
                            <i class="fa-solid fa-trash"></i>
                            <i class="fa-solid fa-ellipsis"></i>
                        </div>
                    </div>
                    <hr>
                    <% }) %>

            </div>

        </div>
    </section>
</body>

</html>